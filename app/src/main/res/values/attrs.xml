<resources>
    <declare-styleable name="BulletTextView">
        <attr name="bulletColor" format="color" />
        <attr name="bulletRadius" format="dimension" />
        <attr name="bulletSpacing" format="dimension" />
    </declare-styleable>

    <declare-styleable name="StatusView">
        <attr name="initialStatus" format="enum">
            <enum name="loading" value="0" />
            <enum name="empty" value="1" />
            <enum name="noInternet" value="2" />
            <enum name="error" value="3" />
            <enum name="ok" value="4" />
        </attr>
    </declare-styleable>
</resources>
